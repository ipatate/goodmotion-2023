---
export interface Props {
  title: string;
  text: string;
  elements: {
    image: {
      src: string;
      width: number;
      height: number;
    };
    title: string;
    class: string;
    place?: string;
    details?: string;
  }[];
}

const { title, text, elements } = Astro.props;
---

<div class="flex flex-col py-6">
  <div class="max-w-5xl w-full mx-auto my-3 md:my-5 text-center px-3">
    <h2
      class="text-3xl md:text-5xl text-primary-900 font-semibold yellow-title"
    >
      {title}
    </h2>
    <p
      class="max-w-2xl text-center w-full mx-auto text-base text-gray-700 my-6 font-light"
    >
      {text}
    </p>
  </div>
  <div
    class="max-w-5xl mt-5 mb-20 w-full mx-auto px-6 grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-2"
  >
    {
      elements.map((element) => (
        <div class="flex flex-col items-center justify-start object-contain w-full py-8 px-2">
          <div class="mb-2 flex items-center h-20">
            <img
              src={element.image.src}
              width={element.image.width}
              height={element.image.height}
              alt={element.title}
              class={element.class}
            />
          </div>
          {element.place && (
            <p class="text-xs text-gray-400 font-extralight mt-2">
              {element.place}
            </p>
          )}
          {element.details && (
            <h3 class="text-xs text-primary-900 font-light mt-3 max-w-[80%] text-center">
              {element.details}
            </h3>
          )}
        </div>
      ))
    }
  </div>
</div>
