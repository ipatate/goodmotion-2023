---
import data from "../../../data";
---

<div
  class="flex flex-col-reverse md:flex-row py-4 h-[80vh] sm:h-screen xl:h-[80vh] landscape:h-[200vh] lg:landscape:h-screen"
>
  <div
    class="absolute top-0 left-0 right-0 bg-gradient-to-b from-primary-50 to-primary-50/10 h-screen z-[-1]"
  >
  </div>
  <div
    class="flex-1 flex flex-col justify-center items-start p-4 md:p-10 max-w-7xl mx-auto text-left"
  >
    <h1
      class="from-primary-900 to-primary-700 bg-gradient-to-tr text-transparent bg-clip-text text-6xl md:text-9xl font-bold py-4"
    >
      {data.baseline}
    </h1>
    <p
      class="mt-5 leading-7 text-lg text-primary-900 font-light"
      set:html={data.heroText}
    />
    <strong
      class="text-primary-900 bg-primary-200 inline-flex py-1 pr-3 items-center pl-1 rounded-lg mt-5 w-auto object-contain font-normal"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        width="32"
        height="32"
        class="mr-1 w-6 h-6"
        viewBox="0 0 24 24"
        ><path
          fill="currentColor"
          d="M12 2c-4.2 0-8 3.22-8 8.2c0 3.18 2.45 6.92 7.34 11.23c.38.33.95.33 1.33 0C17.55 17.12 20 13.38 20 10.2C20 5.22 16.2 2 12 2zm0 10c-1.1 0-2-.9-2-2s.9-2 2-2s2 .9 2 2s-.9 2-2 2z"
        ></path></svg
      >{data.place}</strong
    >
  </div>
</div>
