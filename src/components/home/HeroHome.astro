---
import data from "../../../data";
---

<div class="flex flex-col-reverse md:flex-row py-4 h-[80vh] md:h-screen">
  <div
    class="absolute top-0 left-0 right-0 bg-gradient-to-b from-primary-50 to-primary-50/10 h-screen z-[-1]"
  >
  </div>
  <div
    class="flex-1 flex flex-col justify-center p-4 md:p-10 max-w-7xl mx-auto text-left"
  >
    <h1
      class="from-primary-900 to-primary-700 bg-gradient-to-tr text-transparent bg-clip-text text-6xl md:text-9xl font-bold py-4"
    >
      {data.baseline}
    </h1>
    <p
      class="mt-5 leading-7 text-lg text-gray-700 font-light"
      set:html={data.heroText}
    />
  </div>
</div>
