---
export interface Props {
  title: string;
  color: Color;
}

const { title, color = "primary" } = Astro.props;
---

<div class="flex flex-col-reverse md:flex-row mt-40 mb-33 h-[50vh]">
  <div
    class={`absolute top-0 left-0 right-0 bg-gradient-to-b from-${color}-200 to-${color}-200/20 h-screen z-[-1]`}
  >
  </div>
  <div
    class="flex-1 flex flex-col justify-center p-4 md:p-10 max-w-6xl mx-auto text-left"
  >
    <h1 class={`text-${color}-900 text-6xl md:text-8xl font-bold`}>
      {title}
    </h1>
  </div>
</div>
