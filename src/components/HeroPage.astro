---
export interface Props {
  title: string;
  color: Color;
}

const { title, color = "primary" } = Astro.props;
---

<div
  class="flex flex-col-reverse md:flex-row mt-40 mb-33 h-[30vh] md:h-[50vh] landscape:h-[130vh] lg:landscape:h-[50vh]"
>
  <div
    class={`absolute top-0 left-0 right-0 bg-gradient-to-b from-${color}-200 to-${color}-200/20 h-screen z-[-1]`}
  >
  </div>
  <div
    class="flex-1 flex flex-col justify-center p-4 md:p-10 w-full max-w-6xl mx-auto text-left"
  >
    <h1
      class={`from-${color}-900 to-${color}-700 bg-gradient-to-tr text-transparent bg-clip-text text-4xl md:text-8xl font-bold break-words py-4`}
    >
      {title}
    </h1>
  </div>
</div>
