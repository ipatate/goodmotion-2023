---
import { getCollection } from "astro:content";

const podcasts = await getCollection("podcasts");
---

<div>
  <h2>Les 10 derniers Ã©pisodes du podcast Double Slash</h2>
  <ul class="not-prose flex flex-col gap-7">
    {
      podcasts.splice(0, 10).map((item) => (
        <li class="list-none pl-0 flex flex-col gap-2">
          <h3 class="text-2xl">
            <a href={item.data.link}>{item.data.title}</a>
          </h3>
          <p class="text-sm text-gray-500">{item.data.pubDate}</p>
          <p
            class="text-lg leading-7 text-gray-600"
            set:html={item.data.description}
          />
        </li>
      ))
    }
  </ul>
</div>
