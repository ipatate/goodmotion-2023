---
import HeroPage from "../components/HeroPage.astro";
import Toc from "../components/Toc.astro";
import BaseLayout from "./BaseLayout.astro";
const { headings, frontmatter } = Astro.props;
const colors: Color[] = [
  //   "primary",
  "casper",
  "secondary",
  "summer-green",
  "alto",
];
const randomColor: Color = colors[Math.floor(Math.random() * colors.length)];
---

<BaseLayout
  title={frontmatter.title}
  description={frontmatter.description}
  metaTitle={frontmatter.metaTitle}
  color={randomColor}
>
  <HeroPage title={frontmatter.title} color={randomColor} />
  <div
    class="prose prose-lg md:prose-xl mx-auto pt-5 pb-20 px-4 md:px-10 max-w-6xl page-content relative"
  >
    {frontmatter.showToc && <Toc headings={headings} color={randomColor} />}
    <slot />
  </div>
</BaseLayout>
<style is:global>
  .page-content a {
    @apply text-accent-800 hover:text-accent-600;
  }
</style>
