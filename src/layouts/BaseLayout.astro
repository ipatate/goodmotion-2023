---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100">
    <div class="h-screen absolute top-0 right-0 left-0 z-[-1]"></div>
    <Header />
    <slot />
    <Footer />
    <style is:global>
      @font-face {
        font-family: Sora;
        font-style: oblique 0deg 10deg;
        font-weight: 100 800;
        font-display: fallback;
        src: url("../../assets/fonts/Sora-VariableFont_wght.woff2")
          format("woff2");
        font-stretch: 25% 151%;
        unicode-range: U+000-5FF;
      }
      a {
        @apply text-primary-900 hover:underline;
      }
      .yellow-title {
        @apply inline-flex relative after:bg-secondary-500 after:h-2 after:left-0 after:right-0 after:absolute after:inline-flex after:z-[-1] after:bottom-1;
      }
    </style>
  </body>
</html>
