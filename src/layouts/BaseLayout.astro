---
import { SEO } from "astro-seo";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
  description: string;
  color?: Color;
}

const pathname = new URL(Astro.request.url).pathname;

const { title, description, color = "primary" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <SEO
      title={title}
      description={description}
      canonical={`https://www.goodmotion.fr${pathname}`}
      twitter={{
        creator: "@PatrickFaramaz",
      }}
      extend={{
        link: [
          { rel: "icon", type: "image/svg+xml", href: "/favicon.svg" },
          {
            rel: "alternate",
            hreflang: "fr-FR",
            href: `https://www.goodmotion.fr${pathname}`,
          },
          {
            rel: "alternate",
            hreflang: "fr-CH",
            href: `https://www.goodmotion.ch${pathname}`,
          },
          {
            rel: "alternate",
            hreflang: "x-default",
            href: "https://www.goodmotion.fr",
          },
        ],
        meta: [
          { name: "twitter:title", content: title },
          { name: "twitter:description", content: description },
          { name: "twitter:site", content: "@PatrickFaramaz" },
          { name: "twitter:creator", content: "@PatrickFaramaz" },
          { name: "og:title", content: title },
          { name: "og:description", content: description },
          { name: "og:type", content: "website" },
          { name: "og:image", content: "https://goodmotion.fr/favicon.svg" },
          { name: "og:url", content: "https://goodmotion.fr" },
          { name: "og:site_name", content: "Goodmotion" },
          { name: "og:locale", content: "fr" },
        ],
      }}
    />
  </head>
  <body class="bg-gray-100">
    <div class="h-screen absolute top-0 right-0 left-0 z-[-1]"></div>
    <Header color={color} />
    <slot />
    <Footer />
    <style is:global>
      @font-face {
        font-family: Sora;
        font-style: oblique 0deg 10deg;
        font-weight: 100 800;
        font-display: fallback;
        src: url("../../assets/fonts/Sora-VariableFont_wght.woff2")
          format("woff2");
        font-stretch: 25% 151%;
        unicode-range: U+000-5FF;
      }
      ::selection {
        @apply text-white bg-accent-600;
      }
    </style>
  </body>
</html>
